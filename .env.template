# DataPulse Environment Configuration
# Copy this file to .env and configure your values
#
# Required: GOOGLE_API_KEY
# Generate secrets: python -c "import secrets; print(secrets.token_urlsafe(32))"

# ============================================================
# REQUIRED SETTINGS
# ============================================================

# Google Gemini API Key - Get yours at https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# ============================================================
# SECURITY (configure for production)
# ============================================================

# JWT Secret Key (auto-generated if not set)
# SECRET_KEY=

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# ============================================================
# APPLICATION SETTINGS
# ============================================================

# Environment: development, staging, production
APP_ENV=development

# Debug mode (set to false in production)
DEBUG=true

# Application version
APP_VERSION=2.1.0

# ============================================================
# DATABASE SETTINGS
# ============================================================

# SQLite (default)
DATABASE_URL=sqlite:///./data/database/datapulse.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/datapulse

# ============================================================
# AI SERVICE SETTINGS
# ============================================================

# Google Gemini API Key (required for AI features)
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini Model
GEMINI_MODEL=gemini-2.0-flash-exp

# ============================================================
# API SETTINGS
# ============================================================

# API prefix
API_PREFIX=/api

# Maximum results per page
MAX_PAGE_SIZE=100

# Default page size
DEFAULT_PAGE_SIZE=50

# Maximum file upload size (bytes)
MAX_UPLOAD_SIZE=10485760

# ============================================================
# RATE LIMITING
# ============================================================

# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Requests per minute
RATE_LIMIT_PER_MINUTE=30

# ============================================================
# CACHE SETTINGS
# ============================================================

# Enable caching
CACHE_ENABLED=true

# Cache time-to-live (seconds)
CACHE_TTL_SECONDS=300

# Maximum cache entries
CACHE_MAX_SIZE=1000

# ============================================================
# LOGGING SETTINGS
# ============================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json (production) or colored (development)
LOG_FORMAT=colored

# Log file path (optional)
# LOG_FILE=./logs/datapulse.log

# ============================================================
# JWT SETTINGS
# ============================================================

# Token expiration time in minutes
JWT_EXPIRE_MINUTES=60

# JWT algorithm
JWT_ALGORITHM=HS256

# ============================================================
# EXPORT SETTINGS
# ============================================================

# Export directory
EXPORT_DIR=./exports

# Maximum export rows
MAX_EXPORT_ROWS=10000
